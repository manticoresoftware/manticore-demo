#!/usr/bin/env /src/bin/php-exec
<?php declare(strict_types=1);

use App\Component\Search;
use App\Lib\Queue;
use App\Model\Repo;

$hostname = gethostname();
$no = (int)ltrim(substr($hostname, -2), '.');
$tokens = array_map('trim', explode(' ', getenv("GITHUB_TOKENS") ?: ''));
if (!isset($tokens[$no])) {
	Cli::error("Missing token in GITHUB_TOKENS with no #{$no}");
}
putenv('GITHUB_TOKEN=' . $tokens[$no]);

$ns = 'github-issue-fetch';
Cli::print("Queue NS: $ns");

Queue::process($ns, function (array $repo) {
	$repo = Repo::fromArray($repo);
	Cli::print("Indexing #{$repo->id}: https://github.com/{$repo->org}/{$repo->name}");
	Search::index($repo);
	Queue::add('notification-send', $repo->toArray());
	Cli::print(' done');
	return true;
});
